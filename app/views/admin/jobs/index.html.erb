<div class="pull-right">
  <%= link_to(" Add a job", new_admin_job_path, :class => "btn btn-default" ) %>
</div>

<br><br>


 <table class="table table-boldered table-striped custab" >
    <thead>
        <tr>
            <td>
                职缺
            </td>

            <td>
              收到履历数量
            </td>
            <td>
                薪资下限
            </td>
            <td>
                薪资上限
            </td>
            <td>
                管理选项
            </td>
            <td>
                刊登时间
            </td>
        </tr>
    </thead>

    <% @jobs.each do |job| %>
    <tr>

        <td>
            <%= render_job_status(job) %>

            <%= link_to(job.title, admin_job_path(job)) %>
        </td>
        <td> <%= job.resumes.count %> </td>
        <td> <%= job.wage_lower_bound %> </td>
        <td> <%= job.wage_upper_bound %> </td>
        <td>
            <%= link_to("Edit", edit_admin_job_path(job), :class => "btn btnxs btninfo") %>
            <%= link_to edit_admin_job_path(job), class: "btn btnxs btninfo" do %><i class="fa fapencil"></i><% end %>
            <%= link_to("Destroy", admin_job_path(job), :method => :delete, :class => "btn btnxs  btndanger", :data => { :confirm => "Are you sure?" }) %>
            <%= link_to admin_job_path(job), :method => :delete, :class => "btn btnxs  btndanger", :data => { :confirm => "Are you sure?" } do %><i class="fa fatrasho"></i><% end %>
            <% if job.is_hidden %>
             <%= link_to("Publish", publish_admin_job_path(job) , :method => :post, :class => "btn btnxs btnsuccess") %>
            <%= link_to publish_admin_job_path(job) , :method => :post, :class => "btn btnxs btnsuccess" do %><i class="fa faeye"></i><% end %>
            <% else %>
              <%= link_to("Hide", hide_admin_job_path(job), :method => :post,  :class => "btn btnxs btnwarning") %>
            <%= link_to hide_admin_job_path(job), :method => :post,  :class => "btn btnxs btnwarning" do %><i class="fa faeyeslash"></i><% end %>
            <% end %>
        </td>
        <td>
            <%= job.created_at %>
        </td>
    </tr>
    <% end %>
</table>
